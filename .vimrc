syntax on
filetype plugin indent on
set noerrorbells
set tabstop=2 softtabstop=2
set shiftwidth=2
set expandtab
set guifont=Iosevka\ 20
set guioptions-=m
set guioptions-=T
set noesckeys
set number
set ignorecase
set smartcase
set incsearch
set nohlsearch
set autochdir
set cinoptions=l1
colorscheme elflord
inoremap jk <ESC>
let g:mapleader = "\<Space>"
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

